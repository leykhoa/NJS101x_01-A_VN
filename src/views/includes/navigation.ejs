<body data-spy="scroll" data-target=".navbar" data-offset="50">
  <nav
    class="navbar navbar-expand-lg navbar-dark bg-dark navbar-inverse navbar-fixed-top"
  >
    <div class="container-fluid">
      <a class="navbar-brand <%= path ==='/' ? 'active': '' %>" href="/"
        >MY COMPANY</a
      >
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a
              class="nav-link <%= path ==='/attendance' ? 'active': '' %>"
              href="/attendance"
              >Attendance</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link <%= path ==='/user' ? 'active': '' %>"
              href="/user"
              >User
            </a>
          </li>
          <li class="nav-item">
            <a
              class="nav-link <%= path ==='/work-time' ? 'active': '' %>"
              href="/work-time"
              >Work Time
            </a>
          </li>
          <li class="nav-item">
            <a
              class="nav-link <%= path ==='/covid' ? 'active': '' %>"
              href="/covid"
              >Covid Infomation
            </a>
          </li>
        </ul>
        <form
          action="/work-time/search"
          method="GET"
          class="d-flex <%= path !== '/work-time' ? 'display-none' : '' %>"
        >
          <input
            class="me-2"
            type="search"
            placeholder="Search"
            aria-label="Search"
            name="Enter value"
          />
          <div class="btn-group">
            <button
              class="btn btn-success dropdown-toggle"
              type="button"
              id="dropdownMenuButton2"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Search by
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#">name</a></li>
              <li><a class="dropdown-item" href="#">date</a></li>
              <li><a class="dropdown-item" href="#">work place</a></li>
            </ul>
          </div>
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>
</body>
